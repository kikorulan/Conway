void Test_Number(int i){
    cout << "==============================================================" << endl;
    cout << "===============" << endl;
    cout << "===============     TEST " << i << endl;
    cout << "===============" << endl;            
    cout << "==============================================================" << endl;
}

/*==============================================================
===============                                     ============
===============   TEST 1: CONSTRUCTOR AND GETTERS   ============
===============                                     ============
================================================================*/
TEST_CASE( "Constructor and getters", "1" ) {
/*===================================
Functions to test:
    - Constructors
    - Getters
        getDimensions
        getNX
        getNY
======================================*/
    Test_Number(1);
    CHECK(1 == 1);
}


/*==============================================================
